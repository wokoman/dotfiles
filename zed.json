// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "context_servers": {
        "terraform-context-server": {
            "source": "extension",
            "enabled": true,
            "settings": {}
        },
        "mcp-server-github": {
            "source": "extension",
            "enabled": true,
            "settings": {
                "github_personal_access_token": ""
            }
        },
        "mcp-server-context7": {
            "source": "extension",
            "enabled": true,
            "settings": {
                "default_minimum_tokens": "10000"
            }
        }
    },
  "icon_theme": "Bearded Icon Theme",
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "model_parameters": []
  },
  "agent_font_size": 19,
  "show_edit_predictions": true,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "base_keymap": "VSCode",
  "theme": "One Dark Pro",
  "buffer_font_family": "0xProto Nerd Font Mono",
  "buffer_font_size": 18,
  "show_whitespaces": "boundary",
  "format_on_save": "off",
  "terminal": {
    "dock": "bottom",
    "font_family": "0xProto Nerd Font Mono",
    "font_size": 18,
    "line_height": "standard"
  },
  "minimap": {
    "show": "auto",
    "thumb": "always",
    "thumb_border": "left_open",
    "current_line_highlight": null
  },
  "languages": {
    "Terraform": {
      "format_on_save": "on"
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml",
      "**/values*.yaml"
    ],
    "Ansible": [
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/playbooks/*.yaml",
      "**/playbooks/*.yml",
      "**playbook*.yaml",
      "**playbook*.yml"
    ]
  },
  "ui_font_size": 18,
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover",
    "show_diagnostics": "errors"
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  }
}
